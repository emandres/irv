<p id="notice"><%= notice %></p>

<p>
  <%= link_to 'Vote', new_vote_path(ballot_id: @ballot.id) %>
</p>

<p>
  <b>Name:</b>
  <%= @ballot.name %>
</p>

<% if @ballot.candidates.any? %>
  <p>
    <b>Candidates:</b>
      <ul>
        <% @ballot.candidates.each do |c| %>
          <li><%= c.name %></li>
        <% end %>
      </ul>
  </p>
<% end %>

<% if @ballot.candidates.any? %>
  <p>
    <b>Winner:</b>
    <% winner = IrvElection.new(@ballot).winner %>
    <%= winner.name if winner %>
  </p>
<% end %>


<%= link_to 'Edit', edit_ballot_path(@ballot) %> |
<%= link_to 'Back', ballots_path %>
