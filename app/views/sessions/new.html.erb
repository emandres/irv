<h1>Login</h1>

<p class="alert">
  <%= flash.alert %>
</p>

<%= form_tag session_path do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag 'Login' %>
  </div>
<% end %>

<%= link_to 'Create an account', new_user_path %>
